@using ETicaret2022.Models
@model Urunler
@{
    ViewBag.Title = "Urun";
    List<Kategori> kategoriliste = ViewBag.Kategoriler as List<Kategori>;
}

<div class="jumbotron">
    <h3>@Model.UrunAdi</h3>
</div>

<div class="col-md-3">
    <h2>Kategoriler</h2>
    <ul>
        @foreach (var item in kategoriliste)
        {
            <li>
                @Html.ActionLink(item.KategoriAdi, "Kategori", new { id = item.KategoriID })
            </li>
        }
    </ul>
</div>

<div class="col-md-9">
    <h2><b>Ürün Adı</b></h2>
    <h5>@Model.UrunAdi</h5>
    <div class="row">
        <div class="col-md-6">
            <img src="~/Resim/@(Model.UrunID).jpg" width="100" height="100" />
        </div>
        <div class="col-md-6">
            Ürün Fiyatı:
            <span style="color:red;">@Model.UrunFiyati TL</span> <br />
                                                                 <form action="/Sepet/SepeteEkle">
    <input type="hidden" value="@Model.UrunID" name="id" id="id"/>                                             
                                                                     <input type="number" name="adet" id="adet" value="1" style="width:50px;" />
                                                                     <input type="submit" id="gonder" value="Sepete Ekle" />
                                                                 </form>
          
            <br />

        </div>

    </div>
    <h2><b>Ürün Açıklaması</b></h2>
    <p>@Model.UrunAciklamasi</p>
   
</div>
